# Google Sheets API 설정
# Service Account 이메일 (Google Cloud Console에서 생성)
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com

# Service Account 비공개 키 (JSON 키 파일의 private_key 값)
# 주의: 줄바꿈은 \n으로 표시됨
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# 스프레드시트 ID
# URL: https://docs.google.com/spreadsheets/d/[스프레드시트_ID]/edit
GOOGLE_SPREADSHEET_ID=your_spreadsheet_id_here

# ============================================
# NextAuth 설정
# ============================================

# NextAuth 시크릿 키 (랜덤 문자열, 32자 이상 권장)
# 생성: openssl rand -base64 32
AUTH_SECRET=your_secret_key_here

# ============================================
# 앱 설정 (선택)
# ============================================

# 앱 이름
NEXT_PUBLIC_APP_NAME=프로젝트 관리 시스템

# 앱 URL (배포 시 변경)
NEXT_PUBLIC_APP_URL=http://localhost:3000
